@using PagedList;
@using PagedList.Mvc;
@model DataAccess.Models.Article

@{
	ViewBag.Title = "Blog";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Page Banner Section Start -->
<div class="page-banner-section section">
	<div class="page-banner-wrap row row-0 d-flex align-items-center ">

		<!-- Page Banner -->
		<div class="col-lg-4 col-12 order-lg-2 d-flex align-items-center justify-content-center">
			<div class="page-banner">
				<h1>Bài viết, tin tức</h1>
				<p></p>
				<div class="breadcrumb">
					<ul>
						<li><a href="~/Views/Home/Index.cshtml">Trang chủ</a></li>
						<li><a href="">Tin tức</a></li>
					</ul>
				</div>
			</div>
		</div>

		<!-- Banner -->
		<div class="col-lg-4 col-md-6 col-12 order-lg-1">
			<div class="banner"><a href="#"><img src="~/assets/images/article/banner-1.jpg" width="570" height="232" alt="Banner"></a></div>
		</div>

		<!-- Banner -->
		<div class="col-lg-4 col-md-6 col-12 order-lg-3">
			<div class="banner"><a href="#"><img src="~/assets/images/article/banner-2.jpg" width="570" height="232" alt="Banner"></a></div>
		</div>

	</div>
</div><!-- Page Banner Section End -->
<!-- Blog Section Start -->
<div class="blog-section section mt-90 mb-50">
	<div class="tab-content">
		<div class="row row-40 ">

			<div class="col-lg-8 col-12 order-1 order-lg-2 mb-40 tab-content" >
				<div class="tab-pane row fade show active" id="tab-one">

					@if (ViewBag.ArticleList != null)
					{
						foreach (var item in ViewBag.ArticleList)
						{
							<!-- Blog Item -->
							<div class="col-12 mb-40">
								<div class="ee-blog">
									<a href="@Url.Action("Blogcomment", "Home", new { @id = item.ArticleId })" class="image"><img src="~/assets/images/article/@item.Photo" alt="Blog Image"></a>
									<div class="content">
										<h3><a href="@Url.Action("Blogcomment", "Home", new { @id = item.ArticleId })">@item.Title</a></h3>
										<ul class="meta">
											<li><a href="#">@item.Author</a></li>
											<li><a href="#">@item.PostDate.ToString("dd/MM/yyyy")</a></li>
											<li><a href="#">Comments 05</a></li>
										</ul>
										<p>@item.Sumary</p>
									</div>
								</div>
							</div>
						}
						<div class="blog-sidebar mb-40">

							<h4 class="title">Tags</h4>

							<div class="tags-cloud">
								<a href="#">hitachi</a>
								<a href="#">tủ lạnh</a>
								<a href="#">side by side</a>
								<a href="#">50 inch</a>
								<a href="#">Play Station</a>
								<a href="#">Full HD 4K</a>
							</div>

						</div>
					}

				</div>
				<div class="tab-pane row fade" id="tab-two">
					@Html.Action("ArticleTivi", "Article")
				</div>
				<div class="tab-pane row fade" id="tab-three">
					@Html.Action("ArticleTulanh", "Article")
				</div>
				<div class="tab-pane row fade" id="tab-four">
					@Html.Action("ArticleDieuhoa", "Article")
				</div>
				<div class="tab-pane row fade" id="tab-five">
					@Html.Action("ArticleMaygiat", "Article")
				</div>
			</div>
			

			<div class="col-lg-4 col-12 order-2 order-lg-1">

				<!-- Blog Sidebar -->
				<div class="blog-sidebar mb-40">

					<h4 class="title">Chuyên mục</h4>
					<ul>
						<li><a class="active" data-toggle="tab" href="#tab-one">Tất cả bài viết</a></li>
						<li><a data-toggle="tab" href="#tab-two">TIVI</a></li>
						<li><a data-toggle="tab" href="#tab-three">Tủ lạnh</a></li>
						<li><a data-toggle="tab" href="#tab-four">Điều hòa</a></li>
						<li><a data-toggle="tab" href="#tab-five">Máy giặt</a></li>
					</ul>

				</div>

				<!-- Blog Sidebar -->

				@Html.Action("RecentPost", "Article")

				<!-- Blog Sidebar -->
				<div class="blog-sidebar mb-40">

					<div class="banner"><a href="#"><img src="~/images/banner/banner-41.jpg" alt="Banner"></a></div>

				</div>



			</div>

		</div>
	</div>
</div><!-- Blog Section End -->
<!-- Brands Section Start -->
<div class="brands-section section mb-90">
	<div class="container">
		<div class="row">

			<!-- Brand Slider Start -->
			<div class="brand-slider col">
				<div class="brand-item col"><img src="~/images/brands/brand-1.png" alt="Brands"></div>
				<div class="brand-item col"><img src="~/images/brands/brand-2.png" alt="Brands"></div>
				<div class="brand-item col"><img src="~/images/brands/brand-3.png" alt="Brands"></div>
				<div class="brand-item col"><img src="~/images/brands/brand-4.png" alt="Brands"></div>
				<div class="brand-item col"><img src="~/images/brands/brand-5.png" alt="Brands"></div>
			</div><!-- Brand Slider End -->

		</div>
	</div>
</div><!-- Brands Section End -->
