@model ShopHungVuong.Web.Models.ArticleGroupModelView

@{
	Layout = null;
}
<div class="modal-content" id="newConfModal">
	<form id="myForm">
		@Html.HiddenFor(m => m.Id)
		@Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Name" })
		@Html.TextBoxFor(model => model.Description, new { @class = "form-control", @placeholder = "Description" })
		<a href="#" id="btnSubmit" class="btn btn-success btn-block ">
			@if (Model.Id > 0)
			{
				<span>Update</span>
			}
			else
			{
				<span>Save</span>
			}
		</a>
	</form>
</div>
<script>
	$(document).ready(function () {
		$("#btnSubmit").click(function () {
			$("#loaderDiv").show();
			var myformdata = $("#myForm").serialize();
			$.ajax({
				type: "POST",
				url: "/ArticleGroups/Index",
				data: myformdata,
				success: function () {
					$("#loaderDiv").hide();
					$("#myModal").modal("hide");
					window.location.href = "/ArticleGroups/Index";
				}
			})
		})
	})
</script>